!/bin/bash
sudo apt-get update;
sudo apt-get -y install php5 php5-cli php5-dev php5-mcrypt php5-curl php5-gd libapache2-mod-php5;
cd /vagrant; sudo mkdir /vagrant/cookbooks/; sudo chmod -R 777 cookbooks; cd cookbooks; sudo rm -rf cloud-producao.php; https://raw.githubusercontent.com/Superlogica/framework/master/vagrant/cookbooks/cloud-producao.php --no-check-certificate;
sudo rm -rf lib.php; sudo wget https://raw.githubusercontent.com/Superlogica/framework/master/vagrant/cookbooks/lib.php --no-check-certificate;
sudo php5 /vagrant/cookbooks/cloud-producao.php;