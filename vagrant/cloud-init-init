!/bin/bash
sudo apt-get update;
sudo apt-get -y install php5 php5-cli php5-dev php5-mcrypt php5-curl php5-gd;
sudo rm /tmp/cloud-init;
sudo rm -Rf /tmp/cloud
sudo mkdir /tmp/cloud
cd /tmp/cloud; sudo wget https://raw.githubusercontent.com/Superlogica/framework/master/vagrant/cloud-init --no-check-certificate;
sudo chmod 777 /tmp/cloud/cloud-init;
sudo /tmp/cloud/cloud-init $1
