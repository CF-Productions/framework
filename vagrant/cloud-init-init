!/bin/bash
sudo apt-get update;
sudo apt-get -y install php5 php5-cli php5-dev php5-mcrypt php5-curl php5-gd libapache2-mod-php5;
cd /root;
sudo rm /root/cloud-init;
sudo wget https://raw.githubusercontent.com/Superlogica/framework/master/vagrant/cloud-init --no-check-certificate;
sudo chmod 777 /root/cloud-init;
sudo cloud-init $1
